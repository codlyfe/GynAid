{
  "name": "GynaId-cross-platform",
  "version": "1.0.0",
  "description": "GynaId - Cross-Platform Reproductive Health Application",
  "private": true,
  "scripts": {
    "start:all": "node scripts/start-all.js",
    "start:backend": "cd GynAid-backend && ./mvnw spring-boot:run",
    "start:frontend": "cd GynAid-frontend && npm run dev",
    "start:mobile": "cd GynAid-mobile && npx expo start",
    "start:desktop": "cd GynAid-desktop && npm run dev",
    "install:all": "npm run install:frontend && npm run install:mobile && npm run install:desktop",
    "install:frontend": "cd GynAid-frontend && npm install",
    "install:mobile": "cd GynAid-mobile && npm install",
    "install:desktop": "cd GynAid-desktop && npm install",
    "build:all": "npm run build:frontend && npm run build:mobile && npm run build:desktop",
    "build:frontend": "cd GynAid-frontend && npm run build",
    "build:mobile": "cd GynAid-mobile && eas build --platform all",
    "build:desktop": "cd GynAid-desktop && npm run build",
    "test:all": "npm run test:frontend && npm run test:mobile && npm run test:desktop && npm run test:backend",
    "test:frontend": "cd GynAid-frontend && npm test",
    "test:mobile": "cd GynAid-mobile && npm test",
    "test:desktop": "cd GynAid-desktop && npm test",
    "test:backend": "cd GynAid-backend && ./mvnw test",
    "lint:all": "npm run lint:frontend && npm run lint:mobile && npm run lint:desktop",
    "lint:frontend": "cd GynAid-frontend && npm run lint",
    "lint:mobile": "cd GynAid-mobile && npx expo lint",
    "lint:desktop": "cd GynAid-desktop && npm run lint",
    "clean:all": "npm run clean:frontend && npm run clean:mobile && npm run clean:desktop && npm run clean:backend",
    "clean:frontend": "cd GynAid-frontend && rm -rf node_modules dist",
    "clean:mobile": "cd GynAid-mobile && rm -rf node_modules .expo",
    "clean:desktop": "cd GynAid-desktop && rm -rf node_modules build dist",
    "clean:backend": "cd GynAid-backend && ./mvnw clean",
    "setup": "npm run install:all && npm run setup:mobile",
    "setup:mobile": "cd GynAid-mobile && npx expo install",
    "dev": "npm run start:all",
    "deploy": "node scripts/deploy.js",
    "deploy:web": "node scripts/deploy.js web",
    "deploy:backend": "node scripts/deploy.js backend",
    "deploy:mobile": "node scripts/deploy.js mobile",
    "deploy:desktop": "node scripts/deploy.js desktop",
    "deploy:all": "node scripts/deploy.js all",
    "setup:env": "node scripts/setup-env.js",
    "health-check": "node scripts/health-check.js",
    "postinstall": "echo 'Run npm run setup to install all dependencies'",
    "launch": "node scripts/create-desktop-shortcuts.js",
    "launch:windows": "Launch-GynAid.bat"
  },
  "workspaces": [
    "GynAid-frontend",
    "GynAid-mobile",
    "GynAid-desktop",
    "shared"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GynaId/GynaId-app.git"
  },
  "keywords": [
    "healthcare",
    "reproductive-health",
    "women-health",
    "uganda",
    "cross-platform",
    "react",
    "react-native",
    "electron",
    "spring-boot"
  ],
  "author": "GynaId Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GynaId/GynaId-app/issues"
  },
  "homepage": "https://GynaId.ug",
  "dependencies": {
    "axios": "^1.13.2"
  }
}


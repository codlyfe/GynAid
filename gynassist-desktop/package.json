{
  "name": "gynassist-desktop",
  "version": "1.0.0",
  "main": "main-simple.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "electron:dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron": "^28.2.0",
    "electron-is-dev": "^3.0.1",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.gynassist.desktop",
    "productName": "Gynassist Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main-simple.js",
      "renderer.html",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
